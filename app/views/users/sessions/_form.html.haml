= form_for("user", :url => user_session_path) do |f|
  = f.label :email
  = f.text_field :email
  = f.label :password
  = f.password_field :password
  %br
  .inline=f.check_box :remember_me
  .inline=f.label :remember_me
  %br
  .inline=f.submit 'Sign in', 'class' => 'btn btn-primary'
  .inline.pull-right=link_to "Forgot your password?", new_password_path('user')
