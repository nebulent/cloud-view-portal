:css
  .terminal {
    /*margin: 0 auto;*/
    border: #000 solid 5px;
    font-family: "DejaVu Sans Mono", "Liberation Mono", monospace;
    font-size: 12px;
    color: #f0f0f0;
    background: #000;
    line-height: 14px;
    width: 560px;
    margin: 0 auto;
  }

  #sshTerminalButtons {
    width: 560px;
    margin: 0 auto;
  }

  .reverse-video {
    color: #000;
    background: #f0f0f0;
  }

  .input_area {
    opacity: 0;
    cursor: none;
    width: 570px;
    height: 346px;
    position: absolute;
    z-index: 5;
  }

:javascript
  window._vam = window._vam ? window._vam : {}
  window._vam.sshRelayHost = "#{@ssh_relay_host}"
  window._vam.token = "#{@token}"

  $('#input_area').bind('textarea', function(e){
    var changeVal = $( e.currentTarget ).val();
    $('.terminal').html( changeVal );
  });
  $(window).on("beforeunload", function() {
    $.get('/leave?foo=bar', null);
    return "Bye!"
  });
