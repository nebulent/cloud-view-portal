= render 'validation_errors', resource: @connection

= form_for @connection, url: organizations_terminal_connections_path(@terminal.id) do |f|
  = f.label :user
  = f.text_field :user
  = f.label :protocol
  = f.select :protocol, @protocols.map {|p| [p, p]}
  = f.label :port
  = f.number_field :port
  = f.label :password
  = f.password_field :credentials
  %br
  = f.submit 'Create', 'class' => 'btn btn-primary'
