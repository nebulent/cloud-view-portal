.row
  .span6
    .widget
      .widget-header
        %h3 Users
        .inline.pull-right
          = link_to 'create', new_organizations_user_registration_path, class: 'create_link btn btn-inverse btn-small'
      .widget-content
        %table.table.table-striped
          %thead
            %tr
              %th email
              %th allowed connections
          %tbody
            - @organization.users.each do |user|
              %tr
                %td= user.email
                %td= user.connections.count

  .span6
    .widget
      .widget-header
        %h3 Terminals
        .inline.pull-right
          = link_to 'create', new_organizations_terminal_path, class: 'create_link btn btn-inverse btn-small'
      .widget-content
        %table.table.table-striped
          %thead
            %tr
              %th name
              %th
              %th
          %tbody
            - @organization.terminals.each do |t|
              %tr
                %td= link_to t.name, organizations_terminal_path(t)
                %td #{t.connections.count} connection(s)
                %td
                  .inline= link_button 'Edit', edit_organizations_terminal_path(t)
                  .inline= delete_button 'X', organizations_terminal_path(t)
